<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">
<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml%22%3E">
    
    
    <action label="top">
    
    <!--Homing missile behavior-->
    <fire>
      <speed>0.6</speed>
      <bullet label = "BADCATSURPRISE">
        <action>
          <repeat>
            <!--Update direction as long as the bullet is alive-->
            <times>99999</times>
            <action>
              <!--Get player position-->
              <changeDirection>
                <direction type="aim">0</direction>
                <term>0</term>
              </changeDirection>
              <!--Repeat target acquisition every n frames. Reduce a smoother movement.-->
              <wait>10</wait>
            </action>
          </repeat>
        </action>
      </bullet>
    </fire>
  </action>

<bullet label="badcatSurprise">
    <speed>0.25</speed>
    <action>
      <changeSpeed>
        <speed>1</speed>
        <term>60</term>
      </changeSpeed>
      
    </action>
  </bullet>


  








</bulletml>